---
import TechPill from '@components/TechPill.astro';

const PROJECTS = [
  {
    title: "React Ecommerce",
    description: "Primer proyecto avanzado hecho con React JS con características básicas de un ecommerce como carrito de compras, filtrado y paginación de productos, visualizacion de producto a detalle; asi como manejo de rutas y manejo de estados con Context API.",
    link: "https://benijs-ecommerce.netlify.app/",
    github: "https://github.com/momiavive/react-ecommerce",
    image: "/projects/ecommerce.png",
    tags: ["REACT", "JS", "TAILWIND"]
  }
];
---

{
  PROJECTS.map(({ title, description, tags, image, link }) => (
    <article>
      <a href={link} target="_blank">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      </a>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {
          tags.map(tag => (
            <li>
              <TechPill name={tag} />
            </li>
          ))
        }
      </ul>
      <img 
        class="rounded shadow-2xl shadow-white/10"
        src={image} alt={`Captura de pantalla del proyecto ${image}`} 
      />
    </article>
  ))
}